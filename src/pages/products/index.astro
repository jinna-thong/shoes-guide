---
/**
 * Products Listing Page - English
 */

import { getAllProducts } from '../../lib/db';
import Layout from '../../layouts/Layout.astro';

const products = await getAllProducts();
---

<Layout title="Products" description="Browse all running shoes">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8">All Running Shoes</h1>

    <p class="text-gray-600 mb-8">
      Showing {products.length} products from top brands
    </p>

    <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-6">
      {products.map((product) => (
        <a
          href={`/products/${product.slug}`}
          class="block bg-white border rounded-lg overflow-hidden hover:shadow-lg transition"
        >
          <div class="bg-gray-100 p-6 flex items-center justify-center h-48">
            {product.primary_image_url ? (
              <img
                src={product.primary_image_url}
                alt={product.model_name}
                class="max-w-full max-h-full object-contain"
                loading="lazy"
                decoding="async"
              />
            ) : (
              <div class="text-gray-400">
                <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
              </div>
            )}
          </div>
          <div class="p-4">
            <p class="text-xs text-gray-500 uppercase tracking-wide">{product.brand}</p>
            <h3 class="font-semibold mt-1 mb-2 line-clamp-2">{product.model_name}</h3>
            <p class="text-gray-600 text-sm">
              {product.price_range_min && product.price_range_max
                ? `${product.price_range_min.toLocaleString()} - ${product.price_range_max.toLocaleString()} THB`
                : 'Price unavailable'}
            </p>
            <p class="text-xs text-gray-500 mt-2">{product.gender_target}</p>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>
