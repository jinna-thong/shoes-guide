---
/**
 * E3-S04: Individual Category Page
 * Shows products from a specific category
 * Bilingual EN/TH support with static generation
 */

import { getAllCategories, getProductsByCategory } from '../../lib/db';
import Layout from '../../layouts/Layout.astro';

// Generate static paths for all categories
export async function getStaticPaths() {
  const categories = await getAllCategories();

  return categories.map((cat) => ({
    params: { slug: cat.category.toLowerCase().replace(/ /g, '-') },
    props: { categoryName: cat.category }
  }));
}

const { slug } = Astro.params;
const { categoryName } = Astro.props;

const products = await getProductsByCategory(categoryName);

// Category metadata
const categoryInfo: Record<string, { description: string }> = {
  'Road Running': {
    description: 'Built for pavement and hard surfaces. These shoes are lightweight with responsive cushioning, perfect for daily training runs and racing on streets, sidewalks, and treadmills.'
  },
  'Trail Running': {
    description: 'Designed for off-road terrain. Features aggressive traction patterns, protective toe caps, and durable outsoles for rocks, roots, mud, and technical terrain.'
  },
  'Racing': {
    description: 'Lightweight competition shoes optimized for speed. Often feature carbon fiber plates for energy return and minimal construction to reduce weight.'
  },
  'Daily Trainer': {
    description: 'Versatile shoes for everyday training. These workhorses balance cushioning, durability, and comfort - built to handle high mileage week after week.'
  },
  'Stability': {
    description: 'Support for overpronators. Features guide rails, medial posts, or structured midsoles to control excess foot motion and provide a balanced ride.'
  }
};

const info = categoryInfo[categoryName] || { description: '' };

// Get unique brands in this category
const brandsInCategory = [...new Set(products.map(p => p.brand))].sort();
---

<Layout
  title={categoryName}
  description={`${categoryName} shoes - ${products.length} models to compare`}
>
  <main class="container mx-auto px-4 py-8">
    <!-- Category Header -->
    <div class="bg-gradient-to-r from-blue-600 to-blue-700 rounded-xl p-8 mb-8 text-white">
      <h1 class="text-4xl font-bold mb-2">{categoryName}</h1>
      <p class="text-blue-100 mb-4">
        {products.length} products from {brandsInCategory.length} brands
      </p>
      {info.description && (
        <p class="text-blue-50 max-w-3xl">{info.description}</p>
      )}
    </div>

    <!-- Breadcrumb -->
    <nav class="mb-6 text-sm">
      <ol class="flex items-center gap-2 text-gray-500">
        <li><a href="/" class="hover:text-blue-600">Home</a></li>
        <li>/</li>
        <li><a href="/category" class="hover:text-blue-600">Categories</a></li>
        <li>/</li>
        <li class="text-gray-900">{categoryName}</li>
      </ol>
    </nav>

    <!-- Filter Summary -->
    {brandsInCategory.length > 1 && (
      <div class="mb-6 flex flex-wrap items-center gap-2">
        <span class="text-sm text-gray-500">Brands:</span>
        {brandsInCategory.map((brand) => (
          <span class="px-2 py-1 rounded-full bg-gray-100 text-sm text-gray-700">
            {brand}
          </span>
        ))}
      </div>
    )}

    <!-- Products Grid -->
    {products.length > 0 ? (
      <div class="grid md:grid-cols-3 lg:grid-cols-4 gap-6">
        {products.map((product) => (
          <a
            href={`/products/${product.slug}`}
            class="group block bg-white border rounded-lg overflow-hidden hover:shadow-lg hover:border-blue-300 transition"
          >
            <div class="bg-gray-100 p-6 flex items-center justify-center h-48 relative">
              {product.primary_image_url ? (
                <img
                  src={product.primary_image_url}
                  alt={product.model_name}
                  class="max-w-full max-h-full object-contain group-hover:scale-105 transition"
                  loading="lazy"
                  decoding="async"
                />
              ) : (
                <div class="text-gray-400">
                  <svg class="w-16 h-16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              )}
            </div>
            <div class="p-4">
              <p class="text-xs text-gray-500 uppercase tracking-wide">{product.brand}</p>
              <h3 class="font-semibold mt-1 mb-2 line-clamp-2 group-hover:text-blue-600 transition">
                {product.model_name}
              </h3>
              <p class="text-gray-600 text-sm">
                {product.price_range_min && product.price_range_max
                  ? `${product.price_range_min.toLocaleString()} - ${product.price_range_max.toLocaleString()} THB`
                  : 'Price unavailable'}
              </p>
              <div class="flex items-center gap-2 mt-2">
                <span class="px-2 py-0.5 rounded bg-gray-100 text-xs text-gray-600">
                  {product.gender_target}
                </span>
                <span class="px-2 py-0.5 rounded bg-blue-50 text-xs text-blue-600">
                  {product.price_tier}
                </span>
              </div>
            </div>
          </a>
        ))}
      </div>
    ) : (
      <div class="text-center py-12 text-gray-500">
        <p>No products found in this category.</p>
        <a href="/category" class="text-blue-600 hover:underline mt-2 inline-block">
          &larr; Back to categories
        </a>
      </div>
    )}

    <!-- Related Categories -->
    <div class="mt-12 pt-8 border-t">
      <h2 class="text-xl font-bold mb-4">Other Categories</h2>
      <div class="flex flex-wrap gap-3">
        <a href="/category/road-running" class="px-4 py-2 rounded-lg bg-gray-100 hover:bg-blue-100 hover:text-blue-700 transition">
          Road Running
        </a>
        <a href="/category/trail-running" class="px-4 py-2 rounded-lg bg-gray-100 hover:bg-blue-100 hover:text-blue-700 transition">
          Trail Running
        </a>
        <a href="/category/racing" class="px-4 py-2 rounded-lg bg-gray-100 hover:bg-blue-100 hover:text-blue-700 transition">
          Racing
        </a>
        <a href="/category/daily-trainer" class="px-4 py-2 rounded-lg bg-gray-100 hover:bg-blue-100 hover:text-blue-700 transition">
          Daily Trainer
        </a>
        <a href="/category/stability" class="px-4 py-2 rounded-lg bg-gray-100 hover:bg-blue-100 hover:text-blue-700 transition">
          Stability
        </a>
      </div>
    </div>
  </main>
</Layout>
